@import "bootstrap-sprockets";
@import "bootstrap";

body {
	background-color: #f5f5f1;
	color: #333333;
	font-family: Arial, Helvetica, sans-serif;
}

.navbar-default .navbar-brand {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: #D5641C;
	font-size: 30px;
}

h1.jumboName {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: #D5641C;
	font-size: 90px;
	position: relative;
	top: 60px;
	left: 60px;
}

p.jumboText {
	font-size: 15px;
	font-weight: 100;
	color: white;
	position: relative;
	top: 40px;
	left: 60px;
}

.jumbotron-btn {
	position: relative;
	top: 40px;
	left: 70px;
}

.featured-image {
	border: 4px solid white;
}

.navbar-default .navbar-nav > li > a {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	font-weight: bold;
	color: #337ab7;
}

.col-md-3:nth-child(4n+1) {
	clear: left;
}

.jumbotron {
	background-color: white;
	background-image: url(<%= asset_path 'jsAuto.png' %>);
	height: 412px;
	padding-top: 40px;
}

.cycle-slideshow { 
	width: 400px;
	margin: 0 auto;
	margin-left: 90px;
}

#alt-caption {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: white;
	font-size: 20px;
	margin: 0 auto;
	margin-left: 100px;
	font-weight: bold;
	width: 400px;
}

p.price {
	color: #337ab7;
}

.car-details {
	background-color: white;
	-moz-border-radius: 15px;
	border-radius: 15px;
	width: 410px;
	padding: 10px;
	align: center;
}

.car-payment {
	background-color: white;
	-moz-border-radius: 15px;
	border-radius: 15px;
	width: 280px;
	padding: 10px;
	align: center;
	position: relative;
	top: 20px;
}

.side-div-header {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: #D5641C;
	font-size: 20px;
	padding-bottom: 8px
}

.show-header {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: #D5641C;
	font-size: 40px;
}

.payment-disclaimer {
	font-size: 11px;
}

.description {
	text-align: left;
	margin-top: 10px;
}

.Car-Image {
	padding: 10px 5px 10px 5px;
}

.dropzone {
	width: 405px;
}

#links {
	width: 410px;
}

