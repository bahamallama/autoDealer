@import "bootstrap-sprockets";
@import "bootstrap";
@import "social-share-button";

body {
	background-color: #f5f5f1;
	color: #333333;
	font-family: Arial, Helvetica, sans-serif;
}

.navbar-default .navbar-brand {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: #D5641C;
	font-size: 30px;
}

h1.jumboName {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: #D5641C;
	font-size: 90px;
}

p.jumboText {
	font-size: 15px;
	font-weight: 100;
	color: white;

}

.featured-image {
	border: 4px solid white;
}

.navbar-default .navbar-nav > li > a {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	font-weight: bold;
	color: #337ab7;
}

.col-md-3:nth-child(4n+1) {
	clear: left;
}

.jumbotron {
	-moz-border-radius: 15px;
	border-radius: 15px;
 	background-color: #f5f5f1;
  	background-image: url(<%= asset_path 'jsAuto.png' %>);
 	background-repeat: no-repeat;
}

.cycle-slideshow { 
	width: 400px;
	
}

#alt-caption {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: white;
	font-size: 20px;
	width: 400px;
}

p.price {
	color: #337ab7;
}

.car-details {
	background-color: white;
	-moz-border-radius: 15px;
	border-radius: 15px;
	padding: 10px 5px 10px 5px;
	align: center;
}

.car-payment {
	background-color: white;
	-moz-border-radius: 15px;
	border-radius: 15px;
	padding: 10px;
	align: center;
	margin-top: 10px;
}

.side-div-header {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: #D5641C;
	font-size: 20px;
	padding-bottom: 8px
}

.show-header {
	font-family: guardian-egyptt, georgia, serif;
	font-weight: 400;
	color: #D5641C;
	font-size: 40px;
}

.payment-disclaimer {
	font-size: 11px;
}

.description {
	text-align: left;
	margin-top: 10px;
	margin-bottom: 10px;
}

.Car-Image {
	padding: 10px 5px 10px 5px;
}

.car-contact {
	background-color: white;
	-moz-border-radius: 15px;
	border-radius: 15px;
	padding: 10px;
	align: center;
	margin-top: 10px;
}

.contactPage-text {
	font-size: 15px;
	font-weight: 100;
	margin-bottom: 10px;
}

.special_form {
	display: none;
}

#links {
	width: 410px;
	margin-left: auto ;
	margin-right: auto ;
}

