<div class="jumbotron">
	<div class="row">
		<div class="col-md-6">
  	  		<h1 class="jumboName">J's Auto</h1>
 	  		<p class="jumboText">Serving Central New York Since 1980</p>
  			<p>
  		  	  <%= link_to 'About Us', pages_about_path, class: "btn btn-primary jumbotron-btn", role: "button", style: "color: white" %>
	  		</p>
		</div>
		<div class="col-md-6">
			<div id="alt-caption" class="text-center"></div>
  		  	<div class="cycle-slideshow" data-cycle-slides="> a" data-cycle-caption="#alt-caption" data-cycle-caption-template="{{alt}}" data-cycle-pause-on-hover="true">
				<% Car.featured.each do |car|%>
					<%= link_to image_tag(car.image(:large), alt: car.year.to_s + " " + car.make.name + " " + car.model.name, class: "featured-image" ), car, data: {alt: car.year.to_s + " " + car.make.name + " " + car.model.name} %>
   				<% end %> 
  		  	</div>
		</div>
	</div>
</div>

<div class="row">
	<% @cars.each do |car| %>
  		<div class="col-md-3">
		    <div class="thumbnail">
				<%= link_to image_tag(car.image.url(:medium)), car %>
		         <div class="caption">
		           <h3>
					   <%= car.make.name %>
					   <%= car.model.name %>
				   </h3>
		           <p><%= car.year %> | <%= number_with_delimiter(car.miles, :delimiter => ',') %> Miles</p>
				   <p class="price"><%= number_to_currency(car.price) %></p>
		           <p><%= link_to 'Details', car, class: "btn btn-primary", role: "button", style: "color: white" %></p>
		         </div>
		     </div>
		</div>
	<% end %>
</div>


<% if can? :create, Car %>
	<%= link_to "Create A New Listing", new_car_path, class: "btn btn-link" %> 
<% end %>

<% if can? :manage, :all %>
	| <%= link_to "Web Site Admin", admin_index_path, class:"btn btn-link" %>
<% end %>