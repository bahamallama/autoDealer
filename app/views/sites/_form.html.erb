<%= form_for(@site, :html => { :multipart => true, class: "form-horizontal" }) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert" >
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h4>

