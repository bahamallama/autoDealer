<h1>Listing Site Details</h1>

<table class="table table-striped table-bordered table-condensed" >
  <thead>
    <tr>
      <th>Name</th>
	  <th>Tag</th>
	  <th>Jumbotron</th>
      <th>Contact</th>
      <th>About</th>
	  <th>Location</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
		<td><%= site.tag %></td>
		<td><%= site.jumbotron %></td>
        <td><%= site.contact %></td>
        <td><%= site.about %></td>
		<td><%= site.location %></td>
        <td><%= site.address %></td>
        <td><%= site.city %></td>
        <td><%= site.state %></td>
        <td><%= site.zip %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', admin_index_path, class: "btn btn-link" %>
