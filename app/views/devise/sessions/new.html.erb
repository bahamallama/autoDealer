<div class="form-group">
	<div class="col-sm-2 control-label"></div>
  	<div class="col-sm-10">
		<h2>Log in</h2>
	</div>
</div>

<%= form_for(resource, as: resource_name, html: {class: "form-horizontal"}, url: session_path(resource_name), :authenticity_token => true) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
    		<%= f.email_field :email, autofocus: true, class: "form-control" %>
		</div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
   		 <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
		</div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
		<%= f.label :remember_me, class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
      			<%= f.check_box :remember_me, class: "form-control" %>
			</div>
    </div>
  <% end -%>

  	<div class="actions">
	  <div class="col-sm-2 control-label" ></div>
	 	 <div class="col-sm-10">
    	  	<%= f.submit "Log in", class: "btn btn-primary" %>
	  	</div>
  	</div>
<% end %>

<br />
<br />

	<div class="form-group">
		<div class="col-sm-2 control-label" ></div>
	 	<div class="col-sm-10">
			<%= render "devise/shared/links" %>
		</div>
	</div>
