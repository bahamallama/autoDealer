<table class="table table-striped table-bordered">
	<tr>
		<td><strong>Name:</strong></td>
		<td><%= @user.name %></td>
	</tr>
	<tr>
		<td><strong>Email:</strong></td>
		<td><%= @user.email %></td>
	</tr>
	<tr>
		<td><strong>Role:</strong></td>
		<td><%= @user.role.name %></td>
	</tr>
	<tr>
		<td><strong>Joined on:</strong></td>
		<td><%= @joined_on %></td>
	</tr>
	<tr>
		<td><strong>Last logged in on:</strong></td>
		<td><%= @last_login %></td>
	</tr>
	<tr>
	  <td><strong>No. times logged in:</strong></td>
	  <td><%= @user.sign_in_count %></td>
	</tr>
</table>

<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-link" %> |
<%= link_to 'Back', users_path, class: "btn btn-link" %>