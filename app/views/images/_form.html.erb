<%= form_for(@image, :html => { :multipart => true, class: "form-horizontal" }) do |f| %>
  <% if @image.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert" >
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@car.errors.count, "error") %> prohibited this image from being saved:</h4>

      <ul>
      <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    	<%= f.label :Image, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= image_tag @image.extrapic(:large), class: "img-rounded" %>
	</div>
  </div>
  <div class="form-group">
    	<%= f.label :Car_ID, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
    	<%= f.text_field :car_id, class: "form-control" %>
	</div>
  </div>


  <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
    	 <%= f.submit class: "btn btn-primary" %>
	 </div>
  </div>
<% end %>
