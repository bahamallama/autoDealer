<h1>Listing Makes</h1>
<%= link_to 'Back', admin_index_path, class: "btn btn-link" %> | <%= link_to 'New Make', new_make_path, class: "btn btn-link" %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @makes.each do |make| %>
      <tr>
        <td><%= make.name %></td>
        <td><%= link_to 'Show', make %> | <%= link_to 'Edit', edit_make_path(make) %> | <%= link_to 'Destroy', make, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', admin_index_path, class: "btn btn-link" %> | <%= link_to 'New Make', new_make_path, class: "btn btn-link" %>
